{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "strict": false,
    "emitDeclarationOnly": true,
    // 只输出声明文件(ts 产物)
    "declaration": true,
    // 自动生成声明文件
    "declarationDir": "./dist"
  },
  "include": [
    "src/types/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./**/test.ts",
    "./**/test.js",
    "./**/*.test.js",
    "./**/*.test.ts"
  ]
}